@using SkillsBook.Models.DAL
@using SkillsBook.com.LolNQuote
<section class="slice bg-white">
    <div class="w-section inverse">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="section-title-wr">
                        <h3 class="section-title left"><span>Your Very Precious Feedback</span></h3>
                    </div>
                    <p>
                        Your feedback is extremely important. Our sole purpose is to serve the community in every way possible.
                        Your opinion, suggestions matter most and let us know how we improve to serve you better.
                    </p>
                    <small>Fields marked with * are mandatory</small>
                    <div id="callbackMessage" style="color: #ff0000"></div>
                    <form class="form-light mt-20" role="form" id="feedbackform">
                        <div class="form-group">
                            <label>*Name</label>
                            @if (ViewData["USERNAME"] == null)
                            {
                                <text>
                                    <input type="text" class="form-control" placeholder="your name" id="uname"  required="">
                                </text>
                            }
                            else
                            {
                                <text>
                                    <input type="text" class="form-control" placeholder="your name" id="uname" value="@ViewData["USERNAME"]" readonly>
                                </text>
                            }
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>*Email</label>
                                    @if (ViewData["EMAIL"] == null)
                                    {
                                        <text>
                                            <input type="email" class="form-control" placeholder="Email address" id="email"  required="">
                                        </text>
                                    }
                                    else
                                    {
                                        <text>
                                            <input type="email" class="form-control" placeholder="Email address" id="email" value="@ViewData["EMAIL"]" readonly>
                                        </text>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>*Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="Subject">
                        </div>
                        <div class="form-group">
                            <label>*Message</label>
                            <textarea class="form-control" id="message" placeholder="Write you message here..." style="height:100px;" required></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                             </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-base btn-icon btn-icon-right btn-fly pull-right">
                                    <span>Send message</span>
                                </button>
                            </div>
                        </div>
                    </form>
                    <input type="hidden" data-url="@Url.Action("FeedbackPost","Account")" id="feedbackUrl" />
                    <input type="hidden" data-url="@Url.Action("Index","Home")" id="returnUrl"/>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="section-title-wr">
                                <h3 class="section-title left"><span><img src='@Url.Content("~/images/feedback.jpg")' /></span></h3>
                            </div>

                        </div>

                    </div>

                    <div class="panel-body">
                        <h5>Random Quote</h5>
                        <p>
                            <em> @OtherQuotes.QuoteFeedback</em>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>