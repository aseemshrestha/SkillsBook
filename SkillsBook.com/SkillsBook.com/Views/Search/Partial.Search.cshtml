@model IEnumerable<SkillsBook.Models.Models.ThreadModel>
<script src='@Url.Content("~/Scripts/app/main.js")'></script>
<script src='@Url.Content("~/Scripts/app/search.js")'></script>

<div class="wp-section">
    <div class="container">
        <div class="row">
            <div id="resultpage">
                <div class="col-lg-9">
                    <ul>
                        <li>Search Results For: @ViewData["SearchTerm"]</li>
                        <li>Total Results: @ViewData["TotalCount"]</li>
                    </ul>
                    <ul class="pagination pagination-style-2">
                        @for (var i = 1; i <= Convert.ToInt32(ViewData["TotalPages"]); i++)
                        {
                            if (Convert.ToInt32(ViewData["CurrentPage"]) == i)
                            {
                                if (i < 1)
                                {
                                    continue;
                                }
                                <li class="active"><a href="javascript:void(0)">@i</a></li>
                            }
                            else
                            {
                                <li><a href="javascript:void(0)" id="@i">@i</a></li>
                            }
                        }
                    </ul>
                    <ul>
                        @Html.Partial("Partial.ThreadModelResults")
                    </ul>
                </div>

                <div class="col-md-3">
                    @Html.Partial("Partial.Accordians")
                </div>
            </div>
        </div>
    </div>
</div>
