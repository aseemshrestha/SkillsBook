<style type="text/css">
    .body-wrap {
        min-height: 200px !important;
    }
</style>
<div class="pg-opt">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
               
                @if (ViewData["Message"] != null)
                {
                   <h2>Page is not published currently.</h2>
                }
                else
                {
                     <h2>Page not found</h2>
                }
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb">
                    @if (ViewData["Message"] != null)
                    {
                        <li class="active">Page is not published currently.</li>
                    }
                    else
                    {
                        <li class="active">404: Page not found</li>
                    }
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="slice bg-base" style="padding:90px 0;">
    <div class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        @if (ViewData["Message"] != null)
                        {
                            <h2>Page is not published currently.</h2>
                             <p>
                              This page do exist but not yet published.
                             <br>
                             You may contact page owner to publish the page.
                        </p>
                        }
                        else
                        {
                            <h2>404: Page not found</h2>
                             <h1 class="font-xl">
                                4<i class="fa fa-times-circle-o"></i>4
                             </h1>
                        }
                        <span class="clearfix"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

